{% extends "base.jinja2" %}
{% block body %}
    <div id="menu">
        <ul>
            <li><a href="{{ request.route_url('home') }}">Home</a></li>
            {% if not request.authenticated_userid %}
            <li><a href="{{ request.route_url('login') }}">Create New Entry</a></li>
            <li class="selected"><a href="{{ request.route_url('login') }}">Log In</a></li>
            {% else %}
            <li><a href="{{ request.route_url('newpost') }}">Create New Entry</a></li>
            <li><a href="{{ request.route_url('logout') }}">Log Out</a></li>
            {% endif %}
        </ul>
    </div>
  {% if error -%}
  <p class="error"><strong>Error</strong>: {{ error }}
  {%- endif %}
  <form action="{{ request.route_url('login') }}" method="POST">
    <div class="field">
      <label for="username">Username</label>
      <input type="text" name="username" id="username"/>
    </div>
    <div class="field">
      <label for="password">Password</label>
      <input type="password" name="password" id="password"/>
    </div>
    <div class="control_row">
      <input type="submit" name="Login" value="Login"/>
    </div>
  </form>
{% endblock %}