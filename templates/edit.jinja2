{% extends "base.jinja2" %}
{% block body %}
    <div id="menu">
        <ul>
            <li><a href="{{ request.route_url('home') }}">Home</a></li>
            <li class><a href="{{ request.route_url('newpost') }}">Create New Entry</a></li>
            {% if not request.authenticated_userid %}
            <li><a href="{{ request.route_url('login') }}">Log In</a></li>
            {% else %}
            <li><a href="{{ request.route_url('logout') }}">Log Out</a></li>
            {% endif %}
        </ul>
    </div>
<aside>
<form action="{{ request.route_url('edit_post', id=entry.id)}}" method="POST" class="edit_post">
  <div class="field">
    <label for="title">Title: </label> <br>
    <textarea name="title" id="title" rows="1" cols="80">{{entry.title}}</textarea>
  </div>
  <div class="field">
    <label for="text">Text: {{ entry.Text }}</label> <br>
    <textarea name="text" id="text" rows="15" cols="80">{{entry.text}}</textarea>
  </div>
  <div class="control_row">
    <input type="submit" value="Share" name="Share"/>
  </div>
</form>
</aside>
{% endblock %}